{
	"compilerOptions": {
		"target": "es2020",
		"module": "nodenext",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "nodenext",
		"forceConsistentCasingInFileNames": true,
		"typeRoots": ["./src/@types", "./node_modules/@types"]
	},
	"include": [
		"hardhat.config.cts",
		"./scripts",
		"./deploy",
		"./test",
		"typechain/**/*",
		"./utils",
		"./src"
	],
	"exclude": ["node_modules"]
}
