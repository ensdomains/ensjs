{
  "extends": "../../tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true
    }
  },
  "compilerOptions": {
    "types": ["jest"],
    "outDir": "./dist",
    "declaration": true,
    "importsNotUsedAsValues": "remove",
    "lib": ["ES2021", "DOM"],
    "module": "ES2020",
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "./hardhat.config.ts", "./deploy"]
}
